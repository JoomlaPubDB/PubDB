<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_PUBDB_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_PUBDB_FILTER_STATE"
               description="COM_PUBDB_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="series_title_editor" type="sql" label="COM_PUBDB_FORM_LBL_SERIES_TITLE_SERIES_TITLE_EDITOR" query="SELECT '' AS `id`, 'COM_PUBDB_SERIES_TITLES_SERIES_TITLE_EDITOR_FILTER' AS `val` UNION SELECT `id` AS `id`,  CONCAT(`first_name`, ' ', `last_name`, ' ', `middle_name`) AS val FROM `#__pubdb_person`" key_field="id" value_field="val" class="inputbox" onchange="this.form.submit()" translate="true"/>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_PUBDB_LIST_FULL_ORDERING"
               description="COM_PUBDB_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">COM_PUBDB_ID_ASC</option><option value="a.`id` DESC">COM_PUBDB_ID_DESC</option><option value="a.`ordering` ASC">COM_PUBDB_ORDERING_ASC</option><option value="a.`ordering` DESC">COM_PUBDB_ORDERING_DESC</option><option value="a.`state` ASC">COM_PUBDB_STATE_ASC</option><option value="a.`state` DESC">COM_PUBDB_STATE_DESC</option><option value="a.`name` ASC">COM_PUBDB_NAME_ASC</option><option value="a.`name` DESC">COM_PUBDB_NAME_DESC</option><option value="a.`series_title_editor` ASC">COM_PUBDB_SERIES_TITLE_EDITOR_ASC</option><option value="a.`series_title_editor` DESC">COM_PUBDB_SERIES_TITLE_EDITOR_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_PUBDB_LIST_LIMIT"
               description="COM_PUBDB_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>