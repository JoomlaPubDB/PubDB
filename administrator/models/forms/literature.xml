<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_PUBDB_FORM_LBL_LITERATURE_CREATED_BY" description="COM_PUBDB_FORM_DESC_LITERATURE_CREATED_BY" hidden="true" hint="COM_PUBDB_FORM_LBL_LITERATURE_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_PUBDB_FORM_LBL_LITERATURE_MODIFIED_BY" description="COM_PUBDB_FORM_DESC_LITERATURE_MODIFIED_BY" hidden="true" hint="COM_PUBDB_FORM_LBL_LITERATURE_MODIFIED_BY"/>
    <field name="title" filter="safehtml" type="text" required="true" message="Bitte den Titel angeben!" label="COM_PUBDB_FORM_LBL_LITERATURE_TITLE" description="COM_PUBDB_FORM_DESC_LITERATURE_TITLE" hint="COM_PUBDB_FORM_LBL_LITERATURE_TITLE"/>
    <field name="subtitle" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_SUBTITLE" description="COM_PUBDB_FORM_DESC_LITERATURE_SUBTITLE" hint="COM_PUBDB_FORM_LBL_LITERATURE_SUBTITLE"/>
    <field name="published_on" class="inputbox" format="'%d.%m.%Y'" timeformat="12" filter="server_utc" translateformat="true" showtime="false" singleheader="false" todaybutton="false" weeknumbers="false" filltable="false" type="calendar" required="true" label="COM_PUBDB_FORM_LBL_LITERATURE_PUBLISHED_ON" description="COM_PUBDB_FORM_DESC_LITERATURE_PUBLISHED_ON" hint="COM_PUBDB_FORM_LBL_LITERATURE_PUBLISHED_ON"/>
    <field name="reference_type" default="11" type="radio" required="true" label="COM_PUBDB_FORM_LBL_LITERATURE_REFERENCE_TYPE" description="COM_PUBDB_FORM_DESC_LITERATURE_REFERENCE_TYPE" hint="COM_PUBDB_FORM_LBL_LITERATURE_REFERENCE_TYPE">
      <option value="1">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_1</option>
      <option value="2">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_2</option>
      <option value="3">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_3</option>
      <option value="4">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_4</option>
      <option value="5">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_5</option>
      <option value="6">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_6</option>
      <option value="7">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_7</option>
      <option value="8">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_8</option>
      <option value="9">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_9</option>
      <option value="10">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_10</option>
      <option value="11">COM_PUBDB_LITERATURES_REFERENCE_TYPE_OPTION_11</option>
    </field>
    <field name="access_date" class="inputbox" format="'%d.%m.%Y'" timeformat="24" filter="server_utc" translateformat="true" showtime="true" singleheader="false" todaybutton="true" weeknumbers="false" filltable="false" type="calendar" label="COM_PUBDB_FORM_LBL_LITERATURE_ACCESS_DATE" description="COM_PUBDB_FORM_DESC_LITERATURE_ACCESS_DATE" hint="COM_PUBDB_FORM_LBL_LITERATURE_ACCESS_DATE"/>
    <field name="language" client="site" type="language" label="COM_PUBDB_FORM_LBL_LITERATURE_LANGUAGE" description="COM_PUBDB_FORM_DESC_LITERATURE_LANGUAGE" hint="COM_PUBDB_FORM_LBL_LITERATURE_LANGUAGE"/>
    <field name="doi" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_DOI" description="COM_PUBDB_FORM_DESC_LITERATURE_DOI" hint="COM_PUBDB_FORM_LBL_LITERATURE_DOI" showon="reference_type:1,2,3,4,5,6,7,8,9"/>
    <field name="isbn" maxlength="13" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_ISBN" description="COM_PUBDB_FORM_DESC_LITERATURE_ISBN" hint="COM_PUBDB_FORM_LBL_LITERATURE_ISBN" showon="reference_type:1,3,4,5"/>
    <field name="online_addess" validate="url" type="url" label="COM_PUBDB_FORM_LBL_LITERATURE_ONLINE_ADDESS" description="COM_PUBDB_FORM_DESC_LITERATURE_ONLINE_ADDESS" hint="COM_PUBDB_FORM_LBL_LITERATURE_ONLINE_ADDESS"/>
    <field name="page_count" step="1" type="integer" label="COM_PUBDB_FORM_LBL_LITERATURE_PAGE_COUNT" description="COM_PUBDB_FORM_DESC_LITERATURE_PAGE_COUNT" hint="COM_PUBDB_FORM_LBL_LITERATURE_PAGE_COUNT" showon="reference_type:3,4,5,8,9"/>
    <field name="page_range" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_PAGE_RANGE" description="COM_PUBDB_FORM_DESC_LITERATURE_PAGE_RANGE" hint="COM_PUBDB_FORM_LBL_LITERATURE_PAGE_RANGE" showon="reference_type:1,3,4,5,8,9"/>
    <field name="periodical_id" type="foreignkey" label="COM_PUBDB_FORM_LBL_LITERATURE_PERIODICAL_ID" description="COM_PUBDB_FORM_DESC_LITERATURE_PERIODICAL_ID" class="inputbox" input_type="list" table="#__pubdb_periodical" key_field="id" value_multiple="1" value_field_multiple="issn,name" value_field="fk_value" separator="," default="0" showon="reference_type:3,5,7,8"/>
    <field name="place_of_publication" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_PLACE_OF_PUBLICATION" description="COM_PUBDB_FORM_DESC_LITERATURE_PLACE_OF_PUBLICATION" hint="COM_PUBDB_FORM_LBL_LITERATURE_PLACE_OF_PUBLICATION"/>
    <field name="pub_med_id" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_PUB_MED_ID" description="COM_PUBDB_FORM_DESC_LITERATURE_PUB_MED_ID" hint="COM_PUBDB_FORM_LBL_LITERATURE_PUB_MED_ID"/>
    <field name="series_title_id" type="foreignkey" label="COM_PUBDB_FORM_LBL_LITERATURE_SERIES_TITLE_ID" description="COM_PUBDB_FORM_DESC_LITERATURE_SERIES_TITLE_ID" class="inputbox" input_type="list" table="#__pubdb_series_title" key_field="id" value_field="name" default="0" showon="reference_type:12"/>
    <field name="eisbn" maxlength="13" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_EISBN" description="COM_PUBDB_FORM_DESC_LITERATURE_EISBN" hint="COM_PUBDB_FORM_LBL_LITERATURE_EISBN" showon="reference_type:1,3,4,5"/>
    <field name="volume" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_LITERATURE_VOLUME" description="COM_PUBDB_FORM_DESC_LITERATURE_VOLUME" hint="COM_PUBDB_FORM_LBL_LITERATURE_VOLUME" showon="reference_type:1,4,5,12"/>
    <field name="authors" type="foreignkey" label="COM_PUBDB_FORM_LBL_LITERATURE_AUTHORS" description="COM_PUBDB_FORM_DESC_LITERATURE_AUTHORS" class="inputbox" input_type="list" table="#__pubdb_person" key_field="id" value_multiple="1" value_field_multiple="first_name,last_name,middle_name" value_field="fk_value" separator=" " ordering="1" multiple="multiple" default="0"/>
    <field name="translators" type="foreignkey" label="COM_PUBDB_FORM_LBL_LITERATURE_TRANSLATORS" description="COM_PUBDB_FORM_DESC_LITERATURE_TRANSLATORS" class="inputbox" input_type="list" table="#__pubdb_person" key_field="id" value_multiple="1" value_field_multiple="first_name,last_name,middle_name" value_field="fk_value" separator=" " ordering="1" multiple="multiple" default="0"/>
    <field name="others_involved" type="foreignkey" label="COM_PUBDB_FORM_LBL_LITERATURE_OTHERS_INVOLVED" description="COM_PUBDB_FORM_DESC_LITERATURE_OTHERS_INVOLVED" class="inputbox" input_type="list" table="#__pubdb_person" key_field="id" value_multiple="1" value_field_multiple="first_name,last_name,middle_name" value_field="fk_value" separator=" " ordering="1" multiple="multiple" default="0"/>
    <field name="publishers" type="foreignkey" label="COM_PUBDB_FORM_LBL_LITERATURE_PUBLISHERS" description="COM_PUBDB_FORM_DESC_LITERATURE_PUBLISHERS" class="inputbox" input_type="list" table="#__pubdb_publisher" key_field="id" value_field="name" multiple="multiple" default="0"/>
    <field name="keywords" type="foreignkey" label="COM_PUBDB_FORM_LBL_LITERATURE_KEYWORDS" description="COM_PUBDB_FORM_DESC_LITERATURE_KEYWORDS" class="inputbox" input_type="list" table="#__pubdb_keywords" key_field="id" value_field="name" ordering="1" multiple="multiple" default="0"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
