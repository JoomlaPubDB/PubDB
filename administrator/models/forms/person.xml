<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
        <field name="ordering"/>
        <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox"
               size="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="checked_out" type="hidden" filter="unset"/>
        <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
        <field name="created_by" type="createdby" default="0" label="COM_PUBDB_FORM_LBL_PERSON_CREATED_BY"
               description="COM_PUBDB_FORM_DESC_PERSON_CREATED_BY" hidden="true"
               hint="COM_PUBDB_FORM_LBL_PERSON_CREATED_BY"/>
        <field name="modified_by" type="modifiedby" default="0" label="COM_PUBDB_FORM_LBL_PERSON_MODIFIED_BY"
               description="COM_PUBDB_FORM_DESC_PERSON_MODIFIED_BY" hidden="true"
               hint="COM_PUBDB_FORM_LBL_PERSON_MODIFIED_BY"/>
        <field name="first_name_initial" filter="safehtml" type="text" readonly="true"
               label="COM_PUBDB_FORM_LBL_PERSON_FIRST_NAME_INITIAL"
               description="COM_PUBDB_FORM_DESC_PERSON_FIRST_NAME_INITIAL" hidden="true"
               hint="COM_PUBDB_FORM_LBL_PERSON_FIRST_NAME_INITIAL"/>
        <field name="first_name" filter="safehtml" type="text" required="true"
               label="COM_PUBDB_FORM_LBL_PERSON_FIRST_NAME" description="COM_PUBDB_FORM_DESC_PERSON_FIRST_NAME"
               hint="COM_PUBDB_FORM_LBL_PERSON_FIRST_NAME"/>
        <field name="last_name" filter="safehtml" type="text" required="true"
               label="COM_PUBDB_FORM_LBL_PERSON_LAST_NAME" description="COM_PUBDB_FORM_DESC_PERSON_LAST_NAME"
               hint="COM_PUBDB_FORM_LBL_PERSON_LAST_NAME"/>
        <field name="middle_name" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_PERSON_MIDDLE_NAME"
               description="COM_PUBDB_FORM_DESC_PERSON_MIDDLE_NAME" hint="COM_PUBDB_FORM_LBL_PERSON_MIDDLE_NAME"/>
        <field name="sex" type="radio" label="COM_PUBDB_FORM_LBL_PERSON_SEX"
               description="COM_PUBDB_FORM_DESC_PERSON_SEX" hint="COM_PUBDB_FORM_LBL_PERSON_SEX">
            <option value="1">COM_PUBDB_PEOPLE_SEX_OPTION_1</option>
            <option value="2">COM_PUBDB_PEOPLE_SEX_OPTION_2</option>
            <option value="3">COM_PUBDB_PEOPLE_SEX_OPTION_3</option>
        </field>
        <field name="title" filter="safehtml" type="text" label="COM_PUBDB_FORM_LBL_PERSON_TITLE"
               description="COM_PUBDB_FORM_DESC_PERSON_TITLE" hint="COM_PUBDB_FORM_LBL_PERSON_TITLE"/>
        <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
               description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
    </fieldset>
</form>
