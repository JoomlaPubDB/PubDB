<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade" client="site">
	<name>MOD_PUBDB_NAME</name>
	<creationDate>2020-05-06</creationDate>
	<copyright>2020 Max Dunger, Julian Pfau, Robert Strobel, Florian Warnke</copyright>
	<license>GNU General Public License Version 2 oder neuer; siehe LICENSE.txt</license>
	<author>Max Dunger, Julian Pfau, Robert Strobel, Florian Warnke</author>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>CVS: 0.0.7</version>
	<description>MOD_PUBDB_DESCRIPTION</description>

	<files>
		<filename module="mod_pubdb">mod_pubdb.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">

		<language tag="de-DE">de-DE/de-DE.mod_pubdb.ini</language>
		<language tag="de-DE">de-DE/de-DE.mod_pubdb.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
					name="content_type"
					label="MOD_PUBDB_CONTENT_TYPE_TAB_LBL"
					description="MOD_PUBDB_CONTENT_TYPE_TAB_DESC">
				<field
						name="content_type" type="sql"
						label="MOD_PUBDB_CONTENT_TYPE_LBL"
						description="MOD_PUBDB_CONTENT_TYPE_DESC"
						query="select `id`,`title` from #__pubdb_publication_list"
						key_field="id"
						value_field="title"
						multiple="true"
				>
				</field>
				<field
						name="citation_style_id"
						query="SELECT DISTINCT `id`,`name` FROM #__pubdb_citation_style ORDER BY `id`"
						type="sql"
						key_field="id"
						value_field="name"
						label="COM_PUBDB_TAB_CITATIONSTYLE"
						require="true"
						description="JGLOBAL_SHOW_TITLE_DESC">
				</field>
			</fieldset>
		</fields>
	</config>
</extension>