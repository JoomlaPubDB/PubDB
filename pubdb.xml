<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_pubdb</name>
    <creationDate>2020-04-15</creationDate>
    <copyright>2020 Max Dunger, Julian Pfau, Robert Strobel, Florian Warnke</copyright>
    <license>GNU General Public License Version 2 oder sp√§ter; siehe LICENSE.txt</license>
    <author>Max Dunger, Julian Pfau, Robert Strobel, Florian Warnke</author>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>CVS: 0.0.3</version>
    <description>COM_PUBDB_XML_DESCRIPTION</description>

    <scriptfile>script.php</scriptfile>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <sql>
            <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
        </sql>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>pubdb.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <media destination="com_pubdb" folder="media">
        <folder>js</folder>
        <folder>css</folder>
    </media>
    <languages folder="site/languages">

			<language tag="de-DE">de-DE/de-DE.com_pubdb.ini</language>
    </languages>
    <administration>
        <menu>COM_PUBDB</menu>
        <submenu>

			<menu link="option=com_pubdb&amp;view=literatures" view="literatures" alt="Pubdb/Literatures">COM_PUBDB_TITLE_LITERATURES</menu>

			<menu link="option=com_pubdb&amp;view=periodicals" view="periodicals" alt="Pubdb/Periodicals">COM_PUBDB_TITLE_PERIODICALS</menu>

			<menu link="option=com_pubdb&amp;view=series_titles" view="series_titles" alt="Pubdb/Series_titles">COM_PUBDB_TITLE_SERIES_TITLES</menu>

			<menu link="option=com_pubdb&amp;view=people" view="people" alt="Pubdb/People">COM_PUBDB_TITLE_PEOPLE</menu>

			<menu link="option=com_pubdb&amp;view=publishers" view="publishers" alt="Pubdb/Publishers">COM_PUBDB_TITLE_PUBLISHERS</menu>

			<menu link="option=com_pubdb&amp;view=keywords" view="keywords" alt="Pubdb/Keywords">COM_PUBDB_TITLE_KEYWORDS</menu>

			<menu link="option=com_pubdb&amp;view=citationstyles" view="citationstyles" alt="Pubdb/Citationstyles">COM_PUBDB_TITLE_CITATIONSTYLES</menu>

			<menu link="option=com_pubdb&amp;view=referencetypes" view="referencetypes" alt="Pubdb/Referencetypes">COM_PUBDB_TITLE_REFERENCETYPES</menu>

			<menu link="option=com_pubdb&amp;view=blocks" view="blocks" alt="Pubdb/Blocks">COM_PUBDB_TITLE_BLOCKS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>pubdb.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator/languages">

			<language tag="de-DE">de-DE/de-DE.com_pubdb.ini</language>
			<language tag="de-DE">de-DE/de-DE.com_pubdb.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
        <plugin group="search" plugin="pubdb"/>
    </plugins>
    <modules>
		<module module="mod_pubdb" />
	</modules>
</extension>
