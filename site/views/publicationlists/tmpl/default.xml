<?xml version="1.0" encoding="utf-8"?>
<metadata>
  <layout title="COM_PUBDB_TITLE_LIST_VIEW_PUBLICATIONLISTS" option="View">
    <message>
      <![CDATA[COM_PUBDB_TITLE_LIST_VIEW_PUBLICATIONLISTS_DESC]]>
    </message>
  </layout>

  <fields name="params">
    <fieldset
      name="basic"
      label="COM_PUBDB_FIELDSET_ITEM_ID_SELECT_LABEL">

      <field
        name="citation_style_id"
        query="SELECT DISTINCT `id`,`name` FROM #__pubdb_citation_style ORDER BY `id`"
        type="sql"
        key_field="id"
        value_field="name"
        label="COM_PUBDB_TAB_CITATIONSTYLE"
        require="true"
        description="JGLOBAL_SHOW_TITLE_DESC">
      </field>

      <field
        name="pubdb-id"
        query="SELECT DISTINCT `id`,`title` FROM #__pubdb_literature ORDER BY `id`"
        type="sql"
        key_field="id"
        value_field="title"
        label="COM_PUBDB_TITLE_LITERATURES"
        require="true"
        multiple="multiple"
        description="JGLOBAL_SHOW_TITLE_DESC">
      </field>

      <field
        name="pubdb-authors"
        query="SELECT DISTINCT `id`, concat (`last_name`,', ', `first_name`) as name FROM #__pubdb_person ORDER BY `id`"
        type="sql"
        key_field="id"
        value_field="name"
        label="COM_PUBDB_LITERATURES_AUTHORS"
        require="true"
        multiple="multiple"
        description="JGLOBAL_SHOW_TITLE_DESC">
      </field>

      <field
        name="pubdb-periodicals_id"
        query="SELECT DISTINCT `id`,`name` FROM #__pubdb_periodical ORDER BY `id`"
        type="sql"
        key_field="id"
        value_field="name"
        label="COM_PUBDB_TITLE_PERIODICAL"
        require="true"
        multiple="multiple"
        description="JGLOBAL_SHOW_TITLE_DESC">
      </field>

      <field
        name="pubdb-series_titles"
        query="SELECT DISTINCT `id`,`name` FROM #__pubdb_series_title ORDER BY `id`"
        type="sql"
        key_field="id"
        value_field="name"
        label="COM_PUBDB_TITLE_SERIES_TITLE"
        require="true"
        multiple="multiple"
        description="JGLOBAL_SHOW_TITLE_DESC">
      </field>

    </fieldset>
  </fields>

  <fields name="params">
    <fieldset
      name="Layout"
      label="COM_PUBDB_FIELDSET_LAYOUT_LABEL">
      <field
        name="frontend_filter"
        type="list"
        multiple="true"
        label="COM_PUBDB_LAYOUT_SELECTION"
        require="true"
        description="JGLOBAL_SHOW_TITLE_DESC">
        <option value="publisher_name">COM_PUBDB_FORM_LBL_LITERATURE_PUBLISHERS</option>
        <option value="authors">COM_PUBDB_FORM_LBL_LITERATURE_AUTHORS</option>
        <option value="year">COM_PUBDB_YEAR</option>
        <option value="keywords">COM_PUBDB_LITERATURES_KEYWORDS</option>
        <option value="series_title_name">COM_PUBDB_TITLE_SERIES_TITLES</option>
        <option value="ref_type">COM_PUBDB_TITLE_REFERENCETYPES</option>
      </field>
    </fieldset>
  </fields>
</metadata>
